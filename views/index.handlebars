  <div class= "wrapper">
        <form id="location">
            <h4>Where do you want to Search?</h4>
            <input type='text' id='location' placeholder='City or Zip Code'>
            <input type="submit" id='locationsubmit' value="Submit">
        </form>
          </div>
        <br>
